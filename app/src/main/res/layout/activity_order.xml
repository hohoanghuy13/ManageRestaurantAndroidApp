<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activities.ActivityOrder">

    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/tvBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="BÃ n "
        android:textColor="#006769"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spinnerLoaiMon"
        android:layout_below="@+id/imgBtnBack"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lvMon"
        android:layout_below="@+id/spinnerLoaiMon"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvMon"
        android:backgroundTint="#006769"
        android:text="Cart"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>